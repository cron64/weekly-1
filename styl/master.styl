body
	font-family Arial, sans-serif
	ul
		li
			list-style none
	.bg
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		background linear-gradient(to bottom right, #ffc42a 0%, #ffc42a 50%, #fff 50%, #fff 100%);

	.stage
		position absolute
		top 50%
		left 50%
		transform translate(-50%,-50%)
		height 300px
		
		.card
			height 100%
			width 250px
			position relative
			background white
			border-radius 5px
			box-shadow 0 7px 20px rgba(0,0,0,.1)
			
			&:hover .inner__top
				transform scale(1)
				box-shadow 0 0px 18px rgba(0,0,0,0)
			
			&:hover .inner__top .like
				animation pop-in .2s forwards
				animation-delay .15s
			
			&:hover .inner__top .like .pop-in__child
				animation pop-in__child .3s forwards
				animation-delay .2s
				
			.inner
				&__bottom
					padding 0 20px
					.card
						&__title
							font-size 1.2em
							padding 0
							margin 0
							font-weight 700
						&__txt
							font-size .8em
							font-weight 100
							color grey
							
				&__top
					will-change transform, box-shadow
					transition transform .2s cubic-bezier(0.175, 0.885, 0.32, 1.275)
					height 50%
					top -20px
					position relative
					background black
					width 100%
					transform scale(.9)
					margin 0 auto
					border-radius 5px
					box-shadow 0 10px 18px rgba(0,0,0,.20)
					background-image url('../img/top-bg.jpg')
					background-size cover
					
					.avatars
						display inline-block
						.list
							padding 0
							.item
								transition all .15s ease
								position absolute
								left 0
								width 100%
								max-width 32px
								display inline-block
								vertical-align middle
								margin-right -15px
								opacity 0

								&__count
									background rgba(255,255,255,.5)
									border 1px solid white
									border-radius 50%
									width 32px
									height 32px
									text-align center
									color white
									line-height 2em
									
								.img
									width 100%
									border-radius 50%
									overflow hidden
					.like
						background white
						position absolute
						bottom -30px
						left 50%
						transform translate(-50%)
						padding 10px
						border-radius 50%
						width 20px
						height 20px
						vertical-align middle
						text-align center
						opacity 0
					

			&:hover .inner__top .item:first-child
			&:hover .inner__top .item:nth-child(2)
			&:hover .inner__top .item:nth-child(3)
			&:hover .inner__top .item:last-child
				opacity 1
				
			&:hover .inner__top .item:first-child
				left 20px
			&:hover .inner__top .item:nth-child(2)
				left 40px
			&:hover .inner__top .item:nth-child(3)
				left 60px
			&:hover .inner__top .item:last-child
				left 80px
.pop-in
	animation pop-in 1s forwards
	&__child
		opacity 0
		

	
@keyframes pop-in
	0%
		bottom -30px
		opacity 0
	100%
		bottom -20px
		opacity 1
	
@keyframes pop-in__child
	0%
		transform scale(.4)
		opacity 0
	80%
		transform scale(1.2)
		opacity 1
	100%
		transform scale(1)
		opacity 1

	