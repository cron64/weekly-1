body
	font-family Arial, sans-serif
	ul
		li
			list-style none
	.bg
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		background linear-gradient(to bottom right, #ffc42a 0%, #ffc42a 50%, #fff 50%, #fff 100%);

	.stage
		position absolute
		top 50%
		left 50%
		transform translate(-50%,-50%)
		height 300px
		
		.card
			height 100%
			width 250px
			position relative
			background white
			border-radius 5px
			box-shadow 0 7px 20px rgba(0,0,0,.1)
			
			&:hover .inner__top
				transform scale(1)
				box-shadow 0 0px 18px rgba(0,0,0,0)
			
			&:hover .inner__top .like
				animation pop-in .2s forwards
			
			
			&:hover .inner__top .like .pop-in__child
				animation pop-in__child .25s forwards
				animation-delay .2s
				
			&:hover .inner__top .container-circle
				opacity 1
				bottom -30px
			
			&:hover .inner__top .container-circle .circle-1
				left 0
			&:hover .inner__top .container-circle .circle-3
				left 30px
			
			&:hover .inner__top .avatars .info
				opacity 1
				
			&:hover .inner__top .avatars .info .small
			&:hover .inner__top .avatars .info .bold
				bottom -10px
				
			&:hover .inner__top .avatars .info .bold
				transition-delay .1s
			
			&:hover .inner__top .overlay
				background rgba(0,0,0,.6)
				
				
				
			.inner
				&__bottom
					position relative
					padding 0 20px
					z-index 4
					.card
						&__title
							font-size 1.2em
							padding 0
							margin 0
							font-weight 700
						&__txt
							font-size .8em
							font-weight 100
							color grey
							
				&__top
					will-change transform, box-shadow
					transition transform .2s cubic-bezier(0.175, 0.885, 0.32, 1.275)
					height 50%
					top -20px
					position relative
					background black
					width 100%
					transform scale(.9)
					margin 0 auto
					border-radius 5px
					box-shadow 0 10px 18px rgba(0,0,0,.20)
					background-image url('../img/top-bg.jpg')
					background-size cover
					
					.overlay
						will-change background
						transition background .25s ease
						background rgba(0,0,0,0)
						border-radius 5px
						width 100%
						height 100%
						position absolute
						top 0
						left 0
					
						
					.avatars
						display inline-block
						width 100%
						.info
							opacity 0
							font-size 1em
							position absolute
							top 60px
							left 20px
							transition opacity .3s ease
							.small
							.bold
								display block
								position relative
								transition bottom .3s ease
								color white
							.small
								font-weight 100
								bottom -30px
							.bold
								bottom -30px
								
						.list
							padding 0
							width 100%
							height 100%
							.item
								transition all .15s ease
								position absolute
								left 0
								width 100%
								max-width 32px
								display inline-block
								vertical-align middle
								margin-right -15px
								opacity 0

								&__count
									background rgba(255,255,255,.5)
									border 1px solid white
									border-radius 50%
									width 32px
									height 32px
									text-align center
									color white
									line-height 2em
									
								.img
									width 100%
									border-radius 50%
									overflow hidden
					.like
						z-index 3
						position absolute
						transform translate(-50%)
						padding 7px
						border-radius 50%
						width 20px
						height 20px
						vertical-align middle
						text-align center
						opacity 0
					

			&:hover .inner__top .item:first-child
			&:hover .inner__top .item:nth-child(2)
			&:hover .inner__top .item:nth-child(3)
			&:hover .inner__top .item:last-child
				opacity 1
				
			&:hover .inner__top .item:first-child
				left 20px
			&:hover .inner__top .item:nth-child(2)
				left 40px
			&:hover .inner__top .item:nth-child(3)
				left 60px
			&:hover .inner__top .item:last-child
				left 80px
.pop-in
	animation pop-in 1s forwards
	&__child
		opacity 0
		width 100%
		

	
@keyframes pop-in
	0%
		bottom -30px
		opacity 0
	100%
		bottom 15px
		opacity 1
	
@keyframes pop-in__child
	0%
		transform scale(.4)
		opacity 0
	80%
		transform scale(1.2)
		opacity 1
	100%
		transform scale(1)
		opacity 1


// liquid
.container-circle
	will-change bottom, opacity
	transition bottom .3s ease
	filter url("#liquid")
	position absolute
	transform translate(-50%)
	left 50%
	opacity 0
	bottom -35px
	width 58px
	height 32px
	display block
	
	.circle
		position absolute
		width 32px
		height 32px
		background-color white
		border-radius 50%
	
	.circle-1
		left 16px
		transition left .3s ease-in-out
	.circle-2
		left 30px
		bottom 0
	.circle-3
		transition left .3s ease-in-out
		left 32px

	.circle-1
	.circle-3
		width 30px
		height 20px
		